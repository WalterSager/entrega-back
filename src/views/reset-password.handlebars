<!-- /src/views/reset-password.handlebars -->
<div class="d-flex vh-100 justify-content-center align-items-center bg-light">
  <div class="card shadow-sm p-4" style="min-width: 350px; max-width: 400px;">
    <h3 class="mb-3 text-center">Restablecer Contraseña</h3>
    <p class="text-muted text-center mb-4">Ingresá una nueva contraseña para tu cuenta.</p>

    <form action="/api/sessions/reset-password" method="POST">
      <input type="hidden" name="token" value="{{token}}" />

      <div class="mb-3">
        <label for="newPassword" class="form-label">Nueva Contraseña</label>
        <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="********" required />
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-success">Guardar Contraseña</button>
      </div>
    </form>

    <div class="text-center mt-3">
      <a href="/views/login" class="text-decoration-none text-muted">Volver al inicio de sesión</a>
    </div>
  </div>
</div>
