<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Sistema final</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f4f6f8;
      font-family: 'Segoe UI', 'Roboto', sans-serif;
    }

    .btn-primary {
      background-color: #008080;
      border: none;
    }

    .btn-primary:hover {
      background-color: #006666;
    }

    .modal-header {
      background-color: #008080;
      color: white;
    }

    .modal-footer {
      border-top: none;
    }

    .shadow-float {
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
    }

    .shadow-float:hover {
      transform: translateY(-2px);
      box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>

<body>
  <div class="container my-5">
    {{{body}}}
  </div>

  <!-- Botones flotantes -->
  <div class="position-fixed top-0 end-0 p-3 d-flex flex-column align-items-end gap-2" style="z-index: 999;">
    <button onclick="openCartModal()" class="btn btn-primary shadow">Ver Carrito</button>
    <button onclick="goHome()" class="btn btn-secondary shadow">Inicio</button>
  </div>

  <!-- Modal Carrito -->
  <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-end">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Carrito de Compras</h5>
          <button type="button" class="btn-close" onclick="closeCartModal()" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <ul id="lista-carrito" class="list-group list-group-flush"></ul>
          <hr />
          <p id="totalCarrito" class="text-end fw-bold">Total: $0</p>
        </div>
        <div class="modal-footer">
          <button id="btn-checkout" class="btn btn-success" onclick="finalizarCompra()">Finalizar Compra</button>
          <button type="button" class="btn btn-outline-secondary" onclick="closeCartModal()">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="/js/cart.js"></script>
</body>
</html>
